<h1> Sign Up </h1>

<form action='/users' method='post'>
  Name: <input type='text' name='name' value ='<%= @user.name %>' required>
  E-Mail: <input name='email' type='email'  pattern= "^\w+@\w+[\.a-z]+\b" value='<%= @user.email %>' required>
  Password: <input type='text' name='password'/>
  Confirm password: <input type='text' name='password_confirmation' required>
  <input type='submit' value='Sign Up' required>
</form>
