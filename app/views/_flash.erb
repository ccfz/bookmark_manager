<% if flash[:errors]%>
  <% if flash[:errors] && !flash[:errors].empty? %>
    Please resolve the following errors:
      <ul id='errors'>
        <% flash[:errors].each do |error| %>
          <li><%= error %></li>
        <%end%>
      </ul>
  <%end%>
<%end%>

<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>